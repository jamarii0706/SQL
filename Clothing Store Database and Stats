/* Ordering the Items by their Quantity */

SELECT * FROM clothing_store ORDER BY Quantity;

/*What is the average amount of items in stock?*/

SELECT AVG (Quantity) FROM clothing_store;

/*What is the total number of items we have?*/

SELECT SUM (Quantity) FROM clothing_store;
